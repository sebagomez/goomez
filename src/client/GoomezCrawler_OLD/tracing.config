<log4net threshold="ALL">
	<appender  name="GoomezCrawler" type="log4net.Appender.RollingFileAppender">
		<file  value="GoomezCrawler.log"/>
		<appendToFile  value="true"/>
		<maximumFileSize  value="3000KB"/>
		<maxSizeRollBackups  value="4"/>
		<rollingStyle value="Size" />
		<layout  type="log4net.Layout.PatternLayout">
			<conversionPattern  value="%date{yyyy-MM-dd HH:mm:ss,fff} [%t] %-5p %c{1} - %m%n"/>
		</layout>
	</appender>
	<root>
		<level value="ALL" />
		<appender-ref ref="GoomezCrawler" />
	</root>
</log4net>